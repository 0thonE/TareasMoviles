<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="@dimen/porc_70"
        android:verticalScrollbarPosition="right">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            android:layout_weight="@dimen/porc_80"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_main_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edText_name_input"
                android:inputType="textPersonName|textCapWords"/>

            <EditText
                android:id="@+id/activity_main_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edText_phone_input"
                android:inputType="phone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_scholarship"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <Spinner
                android:id="@+id/activity_main_spinner_scholarship"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_genre"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <RadioButton
                    android:id="@+id/activity_main_female"
                    android:layout_width="@dimen/zero"
                    android:layout_weight="@dimen/porc_50"
                    android:layout_height="wrap_content"
                    android:text="@string/rButton_female_gne"/>
                <RadioButton
                    android:id="@+id/activity_main_male"
                    android:layout_width="@dimen/zero"
                    android:layout_weight="@dimen/porc_50"
                    android:layout_height="wrap_content"
                    android:text="@string/rButton_male_gne"/>
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_fav_book"
                android:textColor="@android:color/black"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/activity_main_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"/>

            <CheckBox
                android:id="@+id/activity_main_sports"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_sports"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/activity_main_erase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_erase" />



</LinearLayout>